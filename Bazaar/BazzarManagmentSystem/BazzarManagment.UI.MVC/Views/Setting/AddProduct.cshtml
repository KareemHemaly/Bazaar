
@{
    ViewData["Title"] = "AddProduct";
}
@*<script></script>*@
<script src="~/js/Setting/AddProduct.js"></script>
<h1>AddProduct</h1>

<div class="container">
    <form id="existProduct">
        <div class="form-group">
            <div class="row">
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Product Type</label>
                        <select class="form-control">
                            <option>--select Type--</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Product Brand</label>
                        <select class="form-control">
                            <option>--select Brand--</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>total number</label>
                        <input class="form-control" placeholder="total number" type="number">
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="form-group">
                        <label>Has Size</label>
                        <input type="checkbox" name="" id="hasSize">
                        <input readonly type="text" placeholder="add size" id="hasSizeInput" class="form-control">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-3">
                <div class="form-group">
                    <label>product</label>
                    <select class="form-control">
                        <option>--select Product--</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="form-group">
                    <label>Count</label>
                    <input class="form-control" placeholder="count" type="number">
                </div>
            </div>

        </div>
        <div class="form-group">
            <input type="button" class="btn btn-primary" value="Add">
            <input type="button" class="btn btn-secondary" value="Choose Product">
        </div>
        <div class="form-group">
            <div class="table-wrapper-scroll-y my-custom-scrollbar">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First</th>
                            <th scope="col">Last</th>
                            <th scope="col">Handle</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>fat</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Larry</td>
                            <td>the Bird</td>
                            <td>twitter</td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td>Mark</td>
                            <td>Otto</td>
                            <td>mdo</td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Jacob</td>
                            <td>Thornton</td>
                            <td>fat</td>
                        </tr>
                        <tr>
                            <th scope="row">6</th>
                            <td>Larry</td>
                            <td>the Bird</td>
                            <td>twitter</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <input readonly type="text" class="from-control" placeholder="Total Price">
        </div>
        <div class="form-group">
            <input type="button" class="btn btn-success" value="Print">
        </div>
    </form>
</div>



<script>
    $("#hasSize").on('change', function () {
        if ($("#hasSize").is(":checked")) {
            $("#hasSizeInput").attr("readonly", false);
        } else {
            $("#hasSizeInput").val("");
            $("#hasSizeInput").attr("readonly", true);
        }
    })
</script>